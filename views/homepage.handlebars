<div class="bg-white py-6 sm:py-12">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Latest Posts</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Create an account to post and comment on the latest stories.</p>
      <div class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16">
        {{#each posts as |post|}}
        {{> post-snippet}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
